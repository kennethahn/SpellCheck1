<Window x:Class="SpellCheck1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <TextBox x:Name="textbox" HorizontalAlignment="Left" Height="187" Margin="0,133,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="517"/>
        <RichTextBox x:Name="richtextbox" HorizontalAlignment="Left" Height="101" VerticalAlignment="Top" Width="517" BorderBrush="{DynamicResource {x:Static SystemColors.ActiveBorderBrushKey}}" SpellCheck.IsEnabled="True">
            <FlowDocument Language="da-dk">
                <Paragraph>
                    <Run Text="RichTextBox"/>
                </Paragraph>
            </FlowDocument>
        </RichTextBox>
        <Button Content="Go" HorizontalAlignment="Left" Margin="432,106,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click"/>

    </Grid>
</Window>
